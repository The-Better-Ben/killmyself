#1
age= int(input("What is your age in years?"))
decades=age/10
print("your age in decades is")
print(decades)
common=.75*age
leap=.25*age
weeksc=common*52.143
weeksl= leap*52.286
weeks= weeksc+weeksl
print("your age in weeks is")
print(weeks)
commond=.75*age
leapd=.25*age
leapdays=leapd*366
commondays=commond*365
aged=commondays+leapdays
print("your age in days is")
print(aged)
minutes=aged*1440
print("your age in minutes is")
print(minutes)
#3
firstd=int(input("first dimension (in feet)?"))
secondd=int(input("second dimension (in feet)?"))
costr=int(input("cost per square foot"))
a=firstd*secondd
print("area equals")
print(a)
p= 2*(firstd+secondd)
print("perimeter equals")
print(p)
c=a*costr
print("total cost equals")
print(c)
