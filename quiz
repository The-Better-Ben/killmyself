#Challenge 5
first= int(input("first cut length(must be <10)"))
second=int(input("second cut length(must be less than 10)"))
#now have the possible inputs
z=first+second
s=5
third=10-second
a=(s*(s-first)*(s-second)*(s-third))**.5
print("area equals")
print(a)
print("1st length equals")
print(first)
print("second length equals ")
x=second-first
print(x)
print("third length equals")
print(third)
#6
ini=int(input("initial number of zombies?"))
r= int(input("people per day?"))
n= int(input("days since incident?"))
rate=r+1
total=ini*rate**n
print("the number of zombies is")
print(total)
